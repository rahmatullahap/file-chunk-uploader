{
    "compileOnSave": false,
    "compilerOptions": {
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es2017",
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "strict": false,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2017",
            "esnext.asynciterable"
        ],
        "sourceMap": true,
        "inlineSourceMap": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ],
    },
    "exclude": [
        "node_modules",
        "dist",
        ".vscode"
    ]
}